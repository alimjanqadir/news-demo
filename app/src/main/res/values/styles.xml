<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowBackground">@color/secondaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.Widget.Toolbar" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
    </style>


    <style name="AppTheme.TextAppearance.Widget.Toolbar" parent="AppTheme">
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.TextAppearance.Small" parent="AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Large" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.SwipeDeleteTextView" parent="AppTheme.TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Widget.MessageTextView.Medium" parent="AppTheme.TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.Widget.MessageTextView.Small" parent="AppTheme.TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>


</resources>
